####################################################################
# Wulu: Static Anime & Manga Platform Environment Configuration
# Copy this file to `.env` and fill in your API keys and project secrets.
# Do NOT commit the real `.env` to version control!
####################################################################

###############################################################################
# General App
###############################################################################
# Used to set the base URL if needed (e.g. for absolute links in meta, etc)
# PUBLIC_URL=

###############################################################################
# Firebase (Authentication and Database)
###############################################################################
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=
# You can find all values in your Firebase project settings

###############################################################################
# Google reCAPTCHA V3 (for bot/spam protection on login)
###############################################################################
RECAPTCHA_SITE_KEY=
# Get this from https://www.google.com/recaptcha/admin

###############################################################################
# Google Custom Search API (for manga/anime cover art search)
###############################################################################
GOOGLE_CSE_ID=
GOOGLE_CSE_KEY=
# https://developers.google.com/custom-search/v1/overview

###############################################################################
# MyAnimeList API (for anime/manga metadata)
###############################################################################
MAL_CLIENT_ID=
MAL_CLIENT_SECRET=
# https://myanimelist.net/apiconfig/

###############################################################################
# AniDB HTTP API (for metadata)
###############################################################################
ANIDB_USERNAME=
ANIDB_PASSWORD=
# http://api.anidb.net/

###############################################################################
# AniList GraphQL API
###############################################################################
ANILIST_CLIENT_ID=
ANILIST_CLIENT_SECRET=
# https://anilist.co/settings/developer

###############################################################################
# Kitsu API (Kitsu.app metadata)
###############################################################################
KITSU_CLIENT_ID=
KITSU_CLIENT_SECRET=
# https://kitsu.docs.apiary.io

###############################################################################
# Stripe (Marketplace payments)
###############################################################################
STRIPE_PUBLIC_KEY=
# https://dashboard.stripe.com/apikeys

###############################################################################
# Razorpay UPI (For Indian payments)
###############################################################################
RAZORPAY_KEY_ID=
# https://dashboard.razorpay.com/app

###############################################################################
# Optional: GitHub Pages Deploy Token (for CI/CD deploy scripts, if any)
###############################################################################
# GITHUB_TOKEN=

###############################################################################
# Developer Notes
###############################################################################
# All variables in this file should be copied into your local `.env` file.
# Never commit the filled `.env` with real API keys to ANY public repository!
# Frontend env vars must use NEXT_PUBLIC_ prefix to be exposed in Next.js (e.g., NEXT_PUBLIC_FIREBASE_API_KEY).
# Example: NEXT_PUBLIC_FIREBASE_API_KEY=abcdef
###############################################################################
